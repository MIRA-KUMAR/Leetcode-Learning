class Solution:
    def characterReplacement(self, s: str, k: int) -> int:
        l, r = 0, 0
        res, maxf = 0, 0
        count = {}
        for r in range(len(s)):
            count[s[r]] = 1 + count.setdefault(s[r], 0)
            maxf = max(maxf, count[s[r]])

            while r - l + 1 - maxf > k:
                count[s[l]] -= 1
                l += 1

            res = max(res, r - l + 1)
        return res
