# Definition for a binary tree node.
class TreeNode:
    def __init__(self, val=0, left=None, right=None):
        self.val = val
        self.left = left
        self.right = right


class Solution:
    def minDiffInBST(self, root):

        if not root:
            return root

        def dfs(root):
            if root:
                dfs(root.left)
                self.ans = min(self.ans, self.val - self.prev)
                self.prev = root.val
                dfs(root.right)

        self.ans = float('inf')
        self.prev = float('-inf')
        dfs(root)
        return self.ans
